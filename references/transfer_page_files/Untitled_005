generateGliaToken(); setInterval(generateGliaToken, 31 * 1000); function generateGliaToken() { if (window.generateGliaContextFailed == true) { return; } var url = '/token/gliachat/GenerateGliaContext?userIdentifier=67360bfe-f8aa-48da-b5bf-a29c2d058c77'; var gliaContextRequest = new XMLHttpRequest(); gliaContextRequest.open('POST', url, true); gliaContextRequest.onload = () => { if (gliaContextRequest.status == 200) { window.getGliaContext = () => { return JSON.parse(gliaContextRequest.responseText); }; } else { window.generateGliaContextFailed = true; } }; gliaContextRequest.send(); }